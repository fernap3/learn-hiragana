{
	"compilerOptions": {
		"module": "es6",
		"moduleResolution": "node",
		"target": "esnext",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"noUnusedLocals": true
	},
	"exclude": [
		"node_modules"
	]
}